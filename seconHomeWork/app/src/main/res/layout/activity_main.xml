<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_gradient">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="80dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"/>

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="170dp"
        android:id="@+id/main"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="200dp"
        android:elevation="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:contentDescription="1"
                    android:elevation="20dp"
                    android:onClick="onBtn"
                    android:text="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:contentDescription="2"
                    android:onClick="onBtn"
                    android:text="2"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:contentDescription="3"
                    android:onClick="onBtn"
                    android:text="3"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:contentDescription="4"
                    android:elevation="20dp"
                    android:onClick="onBtn"
                    android:text="4" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center">

                <Button
                    android:onClick="onBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="5"
                    android:text="5"
                    android:background="@drawable/btn_rounded"
                    android:elevation="20dp" />
                <Button
                    android:onClick="onBtn"
                    android:contentDescription="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:text="6"
                    android:textColor="@color/black" />
                <Button
                    android:onClick="onBtn"
                    android:contentDescription="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:text="7"
                    android:textColor="@color/black" />
                <Button
                    android:onClick="onBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="8"
                    android:text="8"
                    android:background="@drawable/btn_rounded"
                    android:elevation="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded"
                    android:contentDescription="0"
                    android:elevation="20dp"
                    android:onClick="onBtn"
                    android:text="0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp">

                <Button
                    android:id="@+id/start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_danger"
                    android:textColor="@color/white"
                    android:text="Начать с начала"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>